@model PC.Dto.Psychologist.Article.EditArticle
@{
    ViewData["Title"] = "جزئیات مقاله";
}
<section class="container row pt-4 mt-5 pt-md-2 mt-md-3 mx-auto px-0 px-md-2">
    <aside class="col-11 col-md-3 mx-auto mx-md-0">
        <partial name="_NavbarProfile" />
    </aside>
    <section class="col-11 col-md-9 mx-auto mx-md-0 mt-3 mt-md-0 px-0 px-md-2">
        <section class="row">
            <section class="col-7">
                <label class="text-info" asp-for="Title"></label>
                @Model.Title
            </section>
            <section class="col-12">
                <label class="text-info" asp-for="Text"></label>
                <section>
                    @Html.Raw(Model.Text)
                </section>
            </section>
        </section>
        <a class="btn btn-warning btn-sm" asp-action="EditArticle" asp-route-articleId="@Model.Id"> ویرایش </a>
    </section>
</section>
