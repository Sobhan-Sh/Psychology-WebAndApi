@model IEnumerable<PC.Dto.Psychologist.MyIncome>
@{
    ViewData["Title"] = "درامد من";
    ViewData["btn-custom_btn-login-header"] = "btn-custom btn-login-header";
}
<section class="container row pt-4 mt-5 pt-md-2 mt-md-3 mx-auto px-0 px-md-2">
    <aside class="col-11 col-md-3 mx-auto mx-md-0">
        <partial name="_NavbarProfile" />
    </aside>
    <section class="col-11 col-md-9 mx-auto mx-md-0 mt-3 mt-md-0 px-0 px-md-2">
        @if (Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col"> تاریخ ویزیت </th>
                        <th scope="col"> تاریخ ثبت </th>
                        <th scope="col"> مبلغ </th>
                        <th scope="col"> درصد کمیسیون </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.OrderByDescending(x => x.CreatedAt))
                    {
                        <tr>
                            <td> @item.ConsultationDay </td>
                            <td> @item.CreatedAt </td>
                            <td class="text-info"> @item.Price.ToString("n0") تومان</td>
                            <td> @item.Commission درصد </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="custom_alert custom_alert_primary">
                <div class="icon__wrapper">
                    <span class="mdi mdi-alert-outline"></span>
                </div>
                <p class="mb-0"> شما هیچ درامدی نداشتید! </p>
            </div>
        }
    </section>
</section>