@model IEnumerable<PC.Dto.Psychologist.Comment.CommentViewModel>
@{
    ViewData["Title"] = "همه پیام های من";
}
<section class="container row pt-4 mt-5 pt-md-2 mt-md-3 mx-auto px-0 px-md-2">
    <aside class="col-11 col-md-3 mx-auto mx-md-0">
        <partial name="_NavbarProfile" />
    </aside>
    <section class="col-11 col-md-9 mx-auto mx-md-0 mt-3 mt-md-0 px-0 px-md-2">
        <!--* card -->
        <section class="card mx-auto pt-5 pb-3 card-profile-form">
            <!--* title card -->
            <section class="card-title">
                <h3>
                    پیام های من
                </h3>
            </section>
            <hr>
            <ul class="list-group list-group-flush px-5 my-3 py-3">
                @foreach (var item in Model)
                {
                    if (item.UserViewModel == null)
                    {
                        <li class="list-group-item d-flex justify-content-around"> @(item.PatientViewModel.UserViewModel.GenderViewModel.Name.Replace("اقا", "اقای") + " " + item.PatientViewModel.UserViewModel.FullName())  <a class="btn btn-sm btn-info" asp-action="Chat" asp-route-patientId="@item.PatientViewModel.Id"> چت </a> </li>
                    }
                    else
                    {
                        <li class="list-group-item d-flex justify-content-around"> پیامی از سمت ادمین <a class="btn btn-sm btn-info" asp-action="ChatAdmin" asp-route-patientId="@item.UserViewModel.Id"> چت </a> </li>
                    }
                }
            </ul>
        </section>
    </section>
</section>