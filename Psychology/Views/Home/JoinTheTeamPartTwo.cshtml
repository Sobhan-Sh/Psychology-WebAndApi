@model PC.Dto.Psychologist.CreatePsychologist
@{
    ViewData["Title"] = "اضافه شدن به کادر درمان_بخش2";
}
<section class="container row pt-4 mt-5 pt-md-2 mt-md-3 mx-auto px-0 px-md-2">
    <section class="col-11 col-md-9 mx-auto mx-md-0 mt-3 mt-md-0 px-0 px-md-2">
        <!--* card -->
        <section class="card mx-auto pt-5 pb-3 card-profile-form">
            <!--* body card -->
            <section class="card-body px-0">
                <form asp-action="JoinTheTeamPartTwo" enctype="multipart/form-data" class="container-fluid">
                    <input type="hidden" asp-for="CreatedAt" value="@DateTime.Now" />
                    <input type="hidden" asp-for="UserId" value="1" />
                    <section class="row">
                        <section class="col-12 col-md-6">
                            <label asp-for="NationalCode"></label>
                            <input class="cusotm-form-controle" placeholder="کد ملی" asp-for="NationalCode" type="text">
                            <span asp-validation-for="NationalCode"></span>
                        </section>
                        <section class="col-12 col-md-6">
                            <label asp-for="MedicalLicennseCode"></label>
                            <input class="cusotm-form-controle" placeholder="کد پرونده طبابت" asp-for="MedicalLicennseCode" type="text">
                            <span asp-validation-for="MedicalLicennseCode"></span>
                        </section>
                        <section class="col-12 col-md-6">
                            <label asp-for="Age"></label>
                            <input class="cusotm-form-controle" placeholder="سن" asp-for="Age">
                            <span asp-validation-for="Age"></span>
                        </section>
                        <section class="col-12 col-md-6">
                            <label asp-for="DateOfBirth"></label>
                            <input class="cusotm-form-controle" placeholder="تاریخ تولد" asp-for="DateOfBirth">
                            <span asp-validation-for="DateOfBirth"></span>
                        </section>
                        <section class="col-12 col-md-6 input-div">
                            <label asp-for="ImageLicennse"></label>
                            <span class="cusotm-form-controle"> عکس پروانه طبابت </span>
                            <input asp-for="ImageLicennse" class="cusotm-form-controle" type="file">
                        </section>
                        <section class="col-12 col-md-6 mx-auto">
                            <button class="btn btn-custom w-100 mt-3" type="submit"> ثبت اطلاعات </button>
                        </section>
                    </section>
                </form>
            </section>
        </section>
    </section>
</section>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
