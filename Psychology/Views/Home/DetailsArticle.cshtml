@model PC.Dto.Psychologist.Article.ArticleViewModel
@{
    ViewData["Title"] = "جزئیات مقاله";
}

<section class="container row pt-4 mt-5 pt-md-2 mt-md-3 mx-auto px-0 px-md-2">
    <section class="col-11 col-md-9 mx-auto mx-md-0 mt-3 mt-md-0 px-0 px-md-2">
        <!--* card -->
        <section class="card mx-auto pt-5 pb-3 card-profile-form">
            <!--* title card -->
            <section class="card-title">
                <h3 class="d-flex flex-wrap justify-content-around align-items-center">
                    <span> نویسنده : </span>
                    <span> @Model.PsychologistViewModel.UserViewModel.FullName() </span>
                </h3>
            </section>
            <hr>
            <!--* body card -->
            <section class="card-body px-0 row">
                <h6 class="text-center">
                    @Model.Title
                </h6>
                <section class="p-5">
                    @Html.Raw(Model.Text)
                </section>
            </section>
        </section>
    </section>
</section>