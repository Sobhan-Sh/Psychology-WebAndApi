    {
        await Component.InvokeAsync("Messages");
    }
    <!--? start Main -->
    <main class="overflow-x-hidden">
        <section class="container row justify-content-sm-start col-10 pe-0 ps-sm-5 float-end">
            @RenderBody()
        </section>
    </main>
    <!--? end Main -->
    <!-- script bootstrap -->
    <script src="/assets/js/cdn.jsdelivr.net_npm_bootstrap@5.3.2_dist_js_bootstrap.bundle.min.js"></script>
    <!--? Jquery -->
    <script src="/assets/js/jquery-3.7.1.min.js" crossorigin="anonymous"></script>
    <!--? select js -->
    <script src="/assets/js/select2.min.js"></script>
    <!--? sweet alert (js) -->
    <script src="/assets/js/sweetalert2.all.min.js"></script>
    <!-- my script -->
